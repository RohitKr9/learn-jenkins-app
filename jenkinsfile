pipeline {
    agent{
            docker{
                    image 'node'
            }
    }

    stages {
        stage('Build') {
            
            steps {
                sh '''
                    ls -la
                    node -v
                    npm -v
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }
        stage('Test'){
            
            steps{
                sh'''
                    echo 'test Stage'
                    test build/index.html
                    npm -v
                    npm test
                '''
            }
        }
    }
}