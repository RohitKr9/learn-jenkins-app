pipeline {
    agent any

    stages {
        stage('Build') {
            agent{
                docker{
                    image 'node'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    ls -la
                    node -v
                    npm -v
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }
        stage('Test'){
            steps{
                sh'''
                    echo 'test Stage'
                    test build/index.html
                    npm test
                '''
            }
        }
    }
}